                        autofocus required
                        value="{{index .Params "dnsaaaa_addr"}}"
                    >
                </td>
            </tr>
            {{template "RRCommon" .}}
            <tr><td/><td><button id="submit">{{.Button}} record</button></td></tr>
        </table>
    </form>
{{end}}
